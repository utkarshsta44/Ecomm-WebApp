@model IEnumerable<WebApp.Models.Domain.Product>
<head>
    <style>
        body{
            background-color:antiquewhite;
            color:black;
        }

        .chip {
            display: inline-block;
            padding: 0 25px;
            height: 50px;
            font-size: 16px;
            line-height: 50px;
            border-radius: 25px;
            background-color: #f1f1f1;
        }

            .chip img {
                float: left;
                margin: 0 10px 0 -25px;
                height: 50px;
                width: 50px;
                border-radius: 50%;
            }
    </style>
</head>

<nav class="navbar navbar-expand-lg navbar-light bg-primary opacity-75 ">
    <div class="container">
        <a class="btn btn-light" href="Display">User Logged In</a>
   

        <div class="collapse navbar-collapse float-end " id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        
                        <div class="chip">
                            <img src="/image/tanny.jpg" alt="" width="96" height="96">
                            @User.Identity!.Name
                        </div>

                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">

                        <li>
                            <a class="dropdown-item" style=" color:black" asp-action="Logout" asp-controller="Auth">
                                Logout
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" style=" color:black" asp-action="UserProfileImprover"
                               asp-controller="UserServices">
                                Profile
                            </a>
                        </li>
                    </ul>
                </li>
               
                </ul>
                </div>

        <div class="py-3">
            <a class="btn btn-danger" asp-action="Index" asp-controller="Favourite">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314" />
                </svg>Favourite
            </a>
            <a class="btn btn-dark" asp-action="Index" asp-controller="Cart">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
                    <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
                </svg>Cart
            </a>
        </div>
       
                </nav>

<div class="row " style="margin-top:2rem">
    @if (Model != null)
    {

        @foreach (var item in Model)
        {
            <div class="col-md-4 col-xs-6 border-primary mb-3 py-5">
                <div class="card mb-2" style="max-width: 440px ;">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <div class="card-header text-black bg-antiquewhite">
                                <p class="card-text">
                                    <h5 class="card-title d-flex justify-content-between">
                                        @item.ProductName


                                        <a class="btn btn-danger float-right" asp-controller="Favourite" asp-action="AddToFavourite" asp-route-id="@item.ProductId">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                                <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314" />
                                            </svg>
                                        </a>
                                    </h5>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <img src="/image/@item.ProductImage" width="100%" height="220em" alt="@item.ProductName">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <p class="card-text">@item.ProductDescription</p>
                                <p class="card-text"><b>Price: </b>@item.ProductPrice</p>

                                <p class="card-text"><b> Sale Ends On: </b>@item.ProductCreatedAt.ToString("dd MMM yy")</p>


                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="card-footer ">
                                <p class="card-text py-3 d-flex justify-content-between">
                                    <a class="btn btn-dark float-left" asp-action="" asp-route-id="@item.ProductId">
                                        <i class="bi bi-eye-fill"></i> Show Details
                                    </a>
                                  
                                    <a class="btn btn-success text-white" )
                                       asp-controller="Cart"
                                       asp-action="AddToCart"
                                       asp-route-id="@item.ProductId">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
                                            <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
                                        </svg> Add to Cart
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    }

</div>

<script>
    if (performance.navigation.type == 2) {
        location.reload();
    }
</script>

