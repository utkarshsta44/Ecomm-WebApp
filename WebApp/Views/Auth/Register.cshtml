@model WebApp.Models.Dto.AddUserDto;


<html>
<head>
    <style>
     
        body {
            font-family: "Roboto", sans-serif;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background-color: antiquewhite;
            color: black;
        }

        

       
        

           
    </style>
  
</head>
<body>
   
        <div class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form class="sign-up" method="post" asp-action="Register" asp-controller="Auth">
                   <div class="nav d-flex justify-content-between">
                    <h4 class="">Registration Form </h4>
                  <a class="btn btn-light " asp-controller="Home" asp-action="Index">Back to Home</a>
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Enter your name" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter your email" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="number" class="form-label">PhoneNo</label>
                        <input type="number" class="form-control" id="number" placeholder="Enter your phone number" asp-for="PhoneNo">
                        <span asp-validation-for="PhoneNo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Create a password" asp-for="UserPassword">
                        <span asp-validation-for="UserPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Your Password" asp-for="ConfirmPassword">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn submit-btn btn-outline-dark" asp-action="Register" asp-controller="Auth">Create account</button>
                </form>

            </div>
    
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}