@model WebApp.Models.Dto.LoginModel;




<head>
   <style>
       body{
           background-color:antiquewhite;
           color:black;
       }
   </style>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
</head>
<partial name="_Notifications" />

    <div class="container">
        <div class="mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post" asp-action="Login" asp-controller="Auth" class="needs-validation" validate>
                                  

                                    <div class="d-flex align-items-center mb-3 pb-1 d-flex justify-content-between">
                                        <i class="fas fa-cubes fa-2x " style="color: #ff6219;"></i>
                                        @* <img src="~img/logo.png"/> *@
                                        <span class="h2 fw-bold mb-0"> Web App Login</span>
                                    <a class="btn btn-light " asp-controller="Home" asp-action="Index">Back to Home</a>

                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Login into your account</h5>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="form2Example17">Email address</label>
                <input type="email" id="form2Example17" class="form-control form-control-lg" asp-for="UserEmail"  required />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
                                        
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="form2Example27">Password</label>
                    <input type="password" id="form2Example27" class="form-control form-control-lg" asp-for="UserPassword"  required />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
                                       
                                    </div>

                                    <div class="pt-1 mb-4">
                                        @* <input type="submit" class="btn btn-outline-primary" /> *@
                                        <button type="submit" class=" btn btn-outline-dark">Login</button>

                                    </div>

                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Don't have an account?
                                        <a asp-controller="Auth" asp-action="Register" style="color: #393f81;">Register here</a>
                                    </p>

                                </form>

                            </div>
                        </div>
                   


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    if (performance.navigation.type == 2) {
        location.reload();
    }
</script>