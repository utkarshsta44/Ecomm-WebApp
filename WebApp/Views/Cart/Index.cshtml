@foreach (var item in Model)
{

    <div class="col-md-4 col-xs-6 border-primary mb-3 py-5 ">
        <div class="card mb-2" style="max-width: 440px ;">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-black bg-antiquewhite">
                        <p class="card-text">
                            <h5 class="card-title">
                                @item.Product.ProductName

                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-6">
                    <img src="/image/@item.Product.ProductImage" width="100%" height="220em" alt="">
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <p class="card-text">@item.Product.ProductDescription</p>
                        <p class="card-text"><b>Price: </b>@item.Product.ProductPrice</p>

                        <p class="card-text"><b> Sale Ends On: </b>@item.Product.ProductCreatedAt.ToString("dd MMM yy")</p>


                    </div>
                </div> 
                <div class="col-md-12">
                    <div class="card-footer ">
                        <p class="card-text">
                            <a class="btn btn-dark float-left" asp-action="" asp-route-id="@item.ProductId">
                                <i class="bi bi-eye-fill"></i> Show Details
                            </a>
                            <a class="btn btn-danger float-right" asp-action="Details" asp-route-id="@item.ProductId">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" style="" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314" />
                                    </svg> Add to Favouite
                            </a>

                                <div style="text-align: center;">

                                    <p class="py-3"> Quantity: &nbsp;&nbsp;@item.CartItems</p>
                                </div>
                            <a class="btn btn-dark text-white"
                               asp-controller="Cart"
                               asp-action="AddToCart"
                               asp-route-id="@item.ProductId">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z" />
                                    </svg>
                            </a>

                                <a class="remove btn btn-dark text-white float-end "
                               asp-controller="Cart"
                                   asp-action="RemoveFromCart"
                               asp-route-id="@item.ProductId">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dash-circle-fill" viewBox="0 0 16 16">
                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M4.5 7.5a.5.5 0 0 0 0 1h7a.5.5 0 0 0 0-1z" />
                                    </svg>
                            </a>
                      
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}
</div>

@section Scripts {
    <script src="~/js/ProductTable.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.20/dist/sweetalert2.all.min.js"></script>
    <script>
        $(document).ready(function () {
            // Add click event to the "Deactive" button
            $('.remove').on('click', function (e) {
                e.preventDefault();

                // Get the product ID from the button's data-id attribute
                var productId = $(this).data('id');

                // Show SweetAlert2 confirmation dialog
                Swal.fire({
                    title: "Are you sure to Remove it?",
                    text: "You can't revert this!!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, Remove it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Perform the deactivation action
                        window.location.href = $(this).attr('href');
                    }
                });
            });
        });
    </script>
}